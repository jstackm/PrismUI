<UserControl x:Class="PrismUI.Views.WindowD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
             Height="240" Width="480">
    <Grid>
        <StackPanel>
            <Label Content="Window D"
                   FontSize="24"/>
            <TextBlock FontSize="16"
                       Margin="10">
                Display Other Pop-Up Window <LineBreak/>
                with Parameters Recieved/Returned from Other Window
            </TextBlock>
            <TextBox Text="{Binding WindowDText}"
                     Margin="10"
                     FontSize="20"/>
            <Button Content="Display Window B"
                    Margin="10,0,0,3"
                    Width="200"
                    HorizontalAlignment="left"
                    Command="{Binding DisplayWindowB}"/>
            <Button Content="Display Window C"
                    Margin="10,0,0,3"
                    Width="200"
                    HorizontalAlignment="left"
                    Command="{Binding DisplayWindowC}"/>
        </StackPanel>
    </Grid>
</UserControl>
