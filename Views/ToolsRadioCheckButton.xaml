<UserControl x:Class="PrismUI.Views.ToolsRadioCheckButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel>
            <Expander Header="Group 1"
                      Margin="5"
                      IsExpanded="True"
                      BorderBrush="Gray">
                <StackPanel
                    Margin="5">
                    <RadioButton Content="Select Item 1-1" FontFamily="14" Margin="2"/>
                    <RadioButton Content="Select Item 1-2" FontFamily="14" Margin="2"/>
                </StackPanel>
            </Expander>
        
                <GroupBox Margin="5"
                          BorderBrush="Gray">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Content="Group 2"/>
                    </StackPanel>
                                
                </GroupBox.Header>
                    <StackPanel Margin="5">
                        <CheckBox Content="Select Item 2-1" FontFamily="14" Margin="2"/>
                        <CheckBox Content="Select Item 2-2" FontFamily="14" Margin="2"/>
                    </StackPanel>

                </GroupBox>


        </StackPanel>
    </Grid>
</UserControl>
