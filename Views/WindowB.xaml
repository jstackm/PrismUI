<UserControl x:Class="PrismUI.Views.WindowB"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
             Height="240" Width="480">
    <Grid>
        <StackPanel>
            <Label Content="Window B"
                   FontSize="24"/>
            <TextBlock FontSize="16"
                       Margin="10">
                Display Pop-Up Window <LineBreak/>
                with Parameters Recieved from Other Window
            </TextBlock>
            <TextBox Text="{Binding WindowBText}"
                     Margin="10"
                     FontSize="20"/>
            <Button Content="Parameter 1"
                    Margin="10,0,0,3"
                    Width="200"
                    HorizontalAlignment="left"
                    Command="{Binding WindowBParameter1}"/>
            <Button Content="Parameter 2"
                    Margin="10,0,0,3"
                    Width="200"
                    HorizontalAlignment="left"
                    Command="{Binding WindowBParameter2}"/>
            <Button Content="Parameter 3"
                    Margin="10,0,0,3"
                    Width="200"
                    HorizontalAlignment="left"
                    Command="{Binding WindowBParameter3}"/>
        </StackPanel>
    </Grid>
</UserControl>
