<UserControl x:Class="PrismUI.Views.NavigationC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel HorizontalAlignment="Left"
                    VerticalAlignment="Top">
            <Label Content="View C"
                   FontSize="20"/>
            <TextBlock Margin="5"
                       FontSize="14">
                View Transition with  <LineBreak />
                Parameters Send to Other View
            </TextBlock>

            <TextBox Text="{Binding ViewCText}"
                       Margin="5"
                       FontSize="18"/>

            <Button Content="Move to View B with Parameters"
                    Margin="3"
                    Command="{Binding MoveToViewB}"/>
        </StackPanel>
    </Grid>
</UserControl>
